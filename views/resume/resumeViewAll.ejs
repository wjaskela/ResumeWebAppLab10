<%- include("../includes/header.ejs", {title:"Resumes - View All"}); %>
    <p>
        <a href="/">Back to Home</a>
    </p>

    <h1>Resumes</h1>

    <form action="/resume/add">
        <input type="submit" value="Add New Resume"/>
    </form>

    <br />

    <table border="1">
        <tr><th>Resume Name</th><th>Account Name</th><th>Actions</th></tr>
        <% for(var i=0; result.length > i; i++ ) { %>
        <tr>
            <td><a href="/resume/?resume_id=<%= result[i].resume_id %>"><%= result[i].resume_name %></a></td>
            <td><a href="/account/?account_id=<%= result[i].account_id %>"><%= result[i].first_name %>
                    <%= result[i].last_name %></a></td>
            <td>
                <button onclick="event.preventDefault();window.location.href='/resume/edit/?resume_id=<%= result[i].resume_id %>'">Edit</button>
                <form action="/resume/delete" style="display:inline;">
                    <input type="hidden" name="resume_id" id="resume_id" value="<%= result[i].resume_id %>" />
                    <input type="submit" value="Delete"/>
                </form>
            </td>
        </tr>
        <% } %>
    </table>
<%- include("../includes/footer.ejs"); %>